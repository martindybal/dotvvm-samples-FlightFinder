@viewModel FlightFinder.BL.Models.FlightSegment, FlightFinder.BL

<div class="date">
    <h4>{{value: DepartureTime.ToString("ddd MMM d")}}</h4>
    <small>{{value: TicketClass.Name}}</small>
</div>

<div class="departure">
    <h4>{{value: DepartureTime.ToString("H:mm")}}</h4>
    <small>{{value: FromAirportCode}}</small>
</div>

<div class="arrow">➝</div>

<div class="return">
    <h4>{{value: ReturnTime.ToString("H:mm")}}</h4>
    <small>{{value: ToAirportCode}}</small>
</div>